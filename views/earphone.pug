extends layout

block content
  h1= title

  -const results = [{ brand: "Apple",  color: "white", price: 500 },{ brand: "Skull Scandy", color: "Blue", price: 100 },{ brand: "Bose",  color: "Black", price: 220 }]

  div(class="container-fluid")
  div(class="row")
    each item,index in results
      div(class="col-sm-2" onclick=`buy(${index})`)
        p Brand: #{item.brand}
        p Color: #{item.color}
        p Price: $#{item.price}
  script.
    function buy(index)
    {
      alert(`You purchased Item ${index+1}`)
    }